<h2>ToDoを作成する</h2>
<%= form_with model: @task do |f| %>
 <%= render 'shared/error_messages' %>

  <div class="label">
    <%= f.label :ToDo名 %>
  </div>
  <div class="field">
    <%= f.text_field  :title, size: 38, placeholder: "例）○○の予約" %>
  </div>
  <div class="label">
    <%= f.label :カテゴリー %>
  </div>
  <div class="field">
    <%= f.select :category, [["理工学部", "理工学部"], ["経済学部", "経済学部"], ["法学部", "法学部"], ["医学部", "医学部"]], include_blank: "選択して下さい" %>
  </div>
  <div class="label">
    <%= f.label :詳細 %>
  </div>
  <div class="field">
    <%= f.text_area :content, cols: 40, rows: 10 %>
  </div>
  <div class="label">
    <%= f.label :締切り %>
  </div>
  <div class="field">
    <%= f.date_field  :deadline, value: Time.now.strftime("%Y-%m-%d") %>
  </div>
  <%= f.submit value="追加", class: "btn btn-create btn-warning " %>
<% end %>
<%= link_to '戻る', root_path, class: "btn btn-back" %>